<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#323660">



    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:id="@+id/profile_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp">

            <ImageView
                android:id="@+id/logoDashboard"
                android:layout_width="110dp"
                android:layout_height="80dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/foto_user"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:text="Agung Muhammad R"
                android:textColor="@color/white"
                android:layout_width="160dp"
                android:layout_height="80dp"
                android:textAlignment="center"
                android:paddingTop="30dp"
                android:textSize="16sp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="20dp">
            </TextView>

        </LinearLayout>

        <ImageView
            android:id="@+id/history"
            android:layout_width="280dp"
            android:paddingTop="115dp"
            android:layout_marginStart="40dp"
            android:layout_height="wrap_content"
            android:src="@drawable/riwayat_kuis"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >
        </ImageView>

        <TextView
            android:id="@+id/teks_notif"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="280dp"
            android:text="Kelas yang Telah Diselesaikan"
            android:textColor="@color/white">
        </TextView>

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        </ListView>
        <TextView
            android:id="@+id/r_easy"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="310dp"
            android:text="Easy"
            android:textColor="@color/white">
        </TextView>

        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="280dp"
            android:layout_height="100dp"
            android:layout_marginTop="330dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="16dp"
            android:background="#3E9FFF"
            card_view:cardCornerRadius="6dp"
            card_view:cardElevation="3dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#3E9FFF"
                android:orientation="vertical"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#3E9FFF">

                    <ImageView
                        android:id="@+id/pic_easy1"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:layout_marginStart="0dp"
                        android:src="@drawable/kelas1" />

                    <RelativeLayout
                        android:layout_width="201dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/namePlayer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="1dp"
                            android:text="Kelas 1"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/scorePalyer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/namePlayer"
                            android:paddingTop="2dp"
                            android:text="204 Point"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />
                    </RelativeLayout>


                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/r_medium"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="440dp"
            android:text="Medium"
            android:textColor="@color/white">
        </TextView>

        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="280dp"
            android:layout_height="100dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="460dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="16dp"
            android:background="#3E9FFF"
            card_view:cardCornerRadius="6dp"
            card_view:cardElevation="3dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#3E9FFF"
                android:orientation="vertical"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#3E9FFF">

                    <ImageView
                        android:id="@+id/pic_medium1"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:layout_marginStart="0dp"
                        android:src="@drawable/kelas1" />

                    <RelativeLayout
                        android:layout_width="201dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/namePlayer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="1dp"
                            android:text="Kelas 1"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/scorePalyer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/namePlayer"
                            android:paddingTop="2dp"
                            android:text="204 Point"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bn_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="75dp"
        android:background="@color/colorIcon"
        app:itemIconTint="@drawable/state_bnv"
        app:itemTextColor="@drawable/state_bnv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottomnavigation_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>